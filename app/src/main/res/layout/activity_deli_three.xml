<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:fontFamily="@font/aclonica"
        android:text="Protein"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:targetApi="jelly_bean" />

    <ImageView
        android:id="@+id/container"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_alignEnd="@+id/greeting"
        android:layout_alignRight="@+id/greeting"
        android:layout_below="@+id/greeting"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_button" />

    <ProgressBar
        android:id="@+id/Bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:progress="50" />

    <ImageView
        android:id="@+id/cake"
        android:layout_below="@id/greeting"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_cake" />

    <ImageView
        android:id="@+id/carrot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_carrot" />

    <ImageView
        android:id="@+id/chix"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_chicken_leg" />

    <ImageView
        android:id="@+id/steak"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/greeting"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/ic_steak" />

    <ImageView
        android:id="@+id/apple"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_apple" />

    <ImageView
        android:id="@+id/fish"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_sardine" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/greeting"
        android:background="@drawable/ic_arrow_pointing_to_right"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arrow"
        android:textAlignment="center"
        android:text="Drag"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:textStyle="bold" />


</RelativeLayout>


