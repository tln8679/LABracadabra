<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <TextView
                android:id="@+id/gText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:fontFamily="@font/aclonica"
                android:text="@string/why_do_my_parents_always_tell_me_to_eat_my_fruits_and_veggies"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:targetApi="jelly_bean" />

            <ImageView
                android:id="@+id/diets"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/gText"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_diet"
                android:fontFamily="@font/aclonica"
                android:textColor="@android:color/background_light"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/diets"
                android:fontFamily="@font/aclonica"
                android:text="Because they are packed with vitamins!!"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:targetApi="jelly_bean"
                tools:ignore="HardcodedText"
                android:textAlignment="center"
                android:layout_marginBottom="14dp"
                />

            <ProgressBar
                android:id="@+id/Bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_below="@+id/info"
                android:layout_centerHorizontal="true"
                android:progress="35" />

            <Button
                android:id="@+id/nxtbttn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Bar"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/aclonica"
                android:onClick="onClick"
                android:text=""
                android:textColor="@android:color/holo_red_dark"
                android:textSize="28sp"
                tools:targetApi="jelly_bean" />
</RelativeLayout>