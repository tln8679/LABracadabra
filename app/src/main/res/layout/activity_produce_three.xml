<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:fontFamily="@font/aclonica"
            android:text="Let's learn about vitamins!"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fat_soluble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:fontFamily="@font/aclonica"
            android:text="@string/fat_soluble_vitamins"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vitamin_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fat_soluble"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aclonica"
            android:text="Vitamin A: Good for your eyes! Eat your carrots and fish!"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/vitamin_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vitamin_a"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aclonica"
            android:text="Vitamin D: Good for your bones! Drink your milk and eat your cheese!"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/vitamin_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vitamin_d"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aclonica"
            android:text="Vitamin E: Good for your Lungs! Eat your avocados, nuts and seeds!"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/vitamin_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vitamin_e"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/aclonica"
            android:text="Vitamin K: Good for your blood! Eat your spinach and cabbage!"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="22sp" />

       <Button
            android:id="@+id/next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/diets"
            android:fontFamily="@font/aclonica"
            android:text="@string/next2"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:onClick="onClick"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/diets" />




    </RelativeLayout>



</FrameLayout>

